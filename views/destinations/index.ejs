<% layout('layouts/boilerplate') %> 

<div id="map" style="width: 100%; height: 500px;" class="mb-3"></div>

<figure class="text-center"><h1 class="mb-3 text">All Destinations</h1></figure>

        <% for (let destination of destinations) {%> 
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(destination.image.length > 0) { %> 
                        <img src="<%=destination.image[0].url%>" class="img-fluid" alt="">
                        <% } else { %> 
                            <img src="" alt="" srcset="">
                            <% } %> 
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= destination.title %> 
                            </h5>
                            <p class="card-text">
                                <%= destination.description %> 
                            </p>
                            <p class="card-text">
                                 <small class="text">
                                     <%= destination.location %> 
                                 </small>
                            </p>
                            <a class="btn btn-primary" href="/destinations/<%= destination._id %>">View Destination</a>
                        </div>
                    </div>
                </div> 
            </div>
        <% } %>  


        <script> 
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>'; 
            const destinations = { features: <%-JSON.stringify(destinations)%>} 
        </script>


<script src="/javascripts/clusterMap.js"></script>
